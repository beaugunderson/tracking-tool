{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    // set back to false once this is addressed:
    // https://github.com/crossfilter/crossfilter/issues/121
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src"
  ]
}
